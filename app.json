{
  "expo": {
    "name": "waredrop",
    "slug": "waredrop",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "waredrop",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/images/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "bundleIdentifier": "com.hgdev.waredrop",
      "infoPlist": {
        "LSApplicationQueriesSchemes": ["instagram-stories", "instagram"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.hgdev.waredrop",
      "queries": {
        "packages": ["com.instagram.android"]
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your friends.",
          "cameraPermission": "The app accesses your camera to let you take photos of your clothes."
        }
      ],
      [
        "@react-native-google-signin/google-signin",
        {
          "iosUrlScheme": "com.googleusercontent.apps.69409811355-p2v4j82ni2d7rgb3dp0ubhdoadhdbbt7"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
